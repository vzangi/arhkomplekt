div(class="p-2")
  table(class="table table-striped table-dark table-hover")
    thead 
      tr
        th Настройка
        th Значение
        th
    tbody 
      each item in configs
        tr 
          td= item.name 
          td= item.value
          td(class="text-end")
            button(class="btn btn-sm btn-primary edit-btn" title="Редактировать" data-item=item)
              i(class="bi bi-pencil-fill") 