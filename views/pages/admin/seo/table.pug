if user.role == 1
  div(class="p-2")
    include add-form

div(class="p-2")
  table(class="table table-striped table-dark table-hover")
    thead 
      tr
        th Страница
        th Заголовок
        th Описание
        th Ключевые слова
        th
    tbody 
      each item in seos
        tr 
          td= item.page 
          td= item.title
          td= item.description
          td= item.keywords
          td(class="text-end")
            div(class="d-flex gap-1")
              div
                button(class="btn btn-sm btn-primary edit-btn" title="Редактировать" data-item=item)
                  i(class="bi bi-pencil-fill") 
              if user.role == 1
                div
                  form(method="post" action="/admin/seo/remove")
                    input(type="hidden" name="id" value=item.id)
                    button(type="submit" class="btn btn-sm btn-danger remove-btn" title="Удалить" data-item=item)
                      i(class="bi bi-trash") 

              