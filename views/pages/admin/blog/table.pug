div(class="p-2")
  include add-form

div(class="p-2")
  table(class="table table-striped table-dark table-hover")
    thead 
      tr
        th Категория блога
        th
    tbody 
      each item in items
        tr 
          td
            a(href=`/admin/blog/${item.id}` class="text-white text-decoration-none")= item.name
          td(class="text-end")
            div(class="d-flex justify-content-end gap-1")
              div
                button(class="btn btn-sm btn-primary edit-btn" title="Редактировать" data-item=item)
                  i(class="bi bi-pencil-fill") 
              if user.role == 1
                div
                  form(method="post" action="/admin/blog/remove")
                    input(type="hidden" name="id" value=item.id)
                    button(type="submit" class="btn btn-sm btn-danger remove-btn" title="Удалить" data-item=item)
                      i(class="bi bi-trash") 

              