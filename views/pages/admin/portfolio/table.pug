div(class="p-2")
  include add-form

div(class="p-2")
  table(class="table table-striped table-dark table-hover")
    thead 
      tr
        th Заголовок
        th Линк
        th Дата
        th Превью
        th
    tbody 
      each item in items
        tr 
          td= item.title
          td
            a(href=`/portfolio/${item.link}` target="_blank")= item.link
          td= item.date
          td
            img(style="width:100px" src=item.prevuImage) 
          td(class="text-end")
            div(class="d-flex justify-content-end gap-1")
              div
                button(class="btn btn-sm btn-primary edit-btn" title="Редактировать" data-item=item)
                  i(class="bi bi-pencil-fill") 
              div
                form(method="post" action="/admin/portfolio/remove")
                  input(type="hidden" name="id" value=item.id)
                  button(type="submit" class="btn btn-sm btn-danger remove-btn" title="Удалить" data-item=item)
                    i(class="bi bi-trash") 

              