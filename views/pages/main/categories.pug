section(class="categories")
  div(class="box")
    div(class="categories__list")
      ul(id="item_categories")
        each category in categories 
          li(class=`${category.id == 1 ? 'active' : ''}` data-id=`${category.id}`)
            span!= category.name.replaceAll(' ', '&nbsp;')
    

  div(class="categories__items")
    
    each category in categories 
      div(class=`categories__items__list${category.id == 1 ? ' active' : ''}` data-id=category.id)
        
        each item in category.items 
          a(class="categories__item" href=item.url target="_blank")
            div(class="categories__item__desc")
              div(class="categories__item__name") 
                img(src=item.logo alt=item.name)
              div(class="categories__item__hr")
              div(class="categories__item__btn-box")
                button(class="btn btn-primary") Смотреть
            div(class="categories__item__image-box")
              div(class="categories__item__image" style=`background-image:url(${item.img})`)
